{{!< default}}
<!-- error-404.hbs -->
<main id="content" class="{{post_class}} flexy row" role="main">
    <hgroup class="flexy">
        <h2>{{statusCode}}&colon; {{message}}</h2>
        <p>We&apos;re sorry&comma; something unexpected happened&period;</p>
        <p>The page you requested could not be found&period; If the problem persists&comma; please contact our <a href="/help/" title="Help">help</a> for further assistance&period; That&apos;s all we know&period;</p>
        <button onclick="history.back()">Go back</button>
    </hgroup>
    <figure class="error flexy">
        {{> "drawings/404"}}
    </figure>
    {{#if errorDetails}}<section class="error-stack flexy">
        <h3>Theme errors</h3>
        <ul class="error-stack-list">
            {{#foreach errorDetails}}<li><em class="error-stack-function">{{{rule}}}</em>{{#foreach failures}}<p><span class="error-stack-file">Ref: {{ref}}</span></p>
            <p><span class="error-stack-file">Message: {{message}}</span></p>{{/foreach}}</li>{{/foreach}}
        </ul>
    </section>{{/if}}
</main>