<!-- partials/loop-author.hbs -->
<section class="looping flexy gapy-half width-full">{{#get "posts" visibility="all" include="tags" filter="authors:{{primary_author.slug}}+id:-{{id}}" limit=@config.posts_per_page as |result|}}
    {{#if result}}<hgroup class="flexy">
        <h3 id="author-posts" title="{{t 'More posts by this author'}}">{{t "More posts by this author"}}&colon;</h3>
    </hgroup>
    <ol class="flexy gapy-half content-width">
        {{#foreach result}}<li data-index="{{@index}}" data-number="{{@number}}"><a href="{{url}}" title="{{title}}">{{title}}</a></li>{{/foreach}}
    </ol>{{else}}<p title="{{t 'There were no more posts by this author'}}">{{t "There were no more posts by this author"}}&hellip;</p>{{/if}}{{else}}<p><small>This is not the correct context</small></p>
{{/get}}</section>