<!-- partials/loop.hbs -->
<section class="flexy row start gapy-3 content-width">
    {{#foreach posts limit=@config.posts_per_page}}<article class="{{post_class}} flexy row gapy-1 loopy" data-index="{{@index}}" title="{{title}}">
        <hgroup class="flexy start-content gapy-half width-full">
            <h3 id="{{slug}}"><a href="{{url absolute='true'}}" title="{{title}}">{{title}}</a></h3>
        </hgroup>
        {{#match feature_image}}<figure class="flexy has-bg width-full" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}};{{/if}}{{/primary_tag}} background-image: url({{img_url feature_image absolute='true'}})">
            <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" loading="lazy" onerror="this.style.display='none';" />
            {{#match feature_image_caption}}<figcaption class="width-full" title="{{t 'Image caption'}}">{{feature_image_caption}}</figcaption>{{/match}}
        </figure>{{else}}<figure class="flexy has-bg width-full" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}};{{/if}}{{/primary_tag}}"></figure>{{/match}}
        <p title="{{#if custom_excerpt}}{{t 'Custom excerpt'}}{{else}}{{t 'Excerpt'}}{{/if}}">{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt words="42"}}{{/if}}</p>
        <a href="{{url absolute='true'}}" title="{{t 'Continue reading'}}" type="text/html" class="flexy" {{#primary_tag}}{{#if accent_color}}style="background-color: {{accent_color}};"{{/if}}{{/primary_tag}}>{{t "Continue reading"}}</a>
    </article>{{else}}<p class="get-posts-error" title="{{t 'Error'}}">{{t "Error"}}&colon; {{error}}</p>{{/foreach}}
</section>
<div class="flexy gapy-1">
    {{#has visibility="paid"}}<span class="premium-label">Premium</span>{{/has}}
    {{#has visibility="members"}}<span class="subscription-label">Membership</span>{{/has}}
    {{#has visibility="public"}}<span class="subscription-label">Free</span>{{/has}}
</div>