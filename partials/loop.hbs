<!-- partials/loop.hbs -->
<section class="flexy gapy-2">
    <div class="flexy row gapy-3">
        {{#foreach posts visibility="all"}}<article class="{{post_class}} flexy row loopy gapy-half" data-index="{{@index}}" title="{{title}}">
            {{#if feature_image}}<figure class="flexy has-bg width-full" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}};{{/if}}{{/primary_tag}} background-image: url({{img_url feature_image absolute='true'}})">
                <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" loading="lazy" />
                {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
            </figure>{{/if}}
            <hgroup class="flexy gapy-half width-full">
                <h3 id="{{slug}}"><a href="{{url absolute='true'}}" title="{{title}}">{{title}}</a></h3>
                <p>{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt words="35"}}{{/if}}</p>
            </hgroup>
            <a href="{{url absolute='true'}}" title="Continue reading" type="text/html" class="flexy">Continue reading</a>
        </article>{{else}}<p class="get-posts-error">Error&colon; {{error}}</p>{{/foreach}}
    </div>
    {{> "cta" heading="Sign up now"}}
</section>