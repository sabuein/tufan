<!-- partials/loop-tag.hbs -->
<section class="looping flexy gapy-half width-full">
    <hgroup class="flexy">
        <h3 id="all-tags" title="Tags">Tags&colon;</h3>
    </hgroup>
    <div class="flexy gapy-half content-width">
        {{#get "tags" visibility="all" include="count.posts" order="count.posts desc" limit=@config.posts_per_page}}{{#foreach tags}}<p class="flexy row start gapy-half" data-index="{{@index}}" data-number="{{@number}}"><span>{{this.visibility}}</span><a href="{{url}}">{{name}}</a> &lpar;{{count.posts}}&rpar;</p>{{else}}<p>There were no tags&hellip;</p>{{/foreach}}{{/get}}
    </div>
</section>