{{!< default}}
<!-- post.hbs -->
{{#is "post"}}
{{#post}}
<progress class="flexy width-full" max="100" value="55" title="Reading progress" aria-label="Reading progress"></progress>
{{#primary_tag}}{{#if accent_color}}<style>
    :root {
        --accent-color: {{accent_color}};
        --brandcolor: {{accent_color}};
    }

    *.kg-button-card a.kg-btn-accent {
        background-color: {{accent_color}};
    }
</style>{{/if}}{{/primary_tag}}
<section class="flexy row palette">
    {{#match @page.show_title_and_feature_image}}{{#if feature_image}}<figure class="flexy has-bg" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}}; {{/if}}{{/primary_tag}}background-image: url({{img_url feature_image absolute='true'}})" title="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
        <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" loading="lazy" />
        {{#if feature_image_caption}}<figcaption class="width-full">{{feature_image_caption}}</figcaption>{{/if}}
    </figure>{{/if}}
    <hgroup class="flexy start gapy-half">
        <h2 class="flexy row start-content gapy-half width-full" id="{{slug}}" title="{{title}}"><a href="{{url absolute='true'}}" title="Copy post URL" type="text/html">&#128279;</a><span title="{{title}}">{{title}}</span></h2>
        <ul class="meta flexy start-content width-full">
            <li class="flexy"><span title="Published">Published&colon;</span><time datetime="{{date published_at format="YYYY-MM-DD"}}" title="{{date published_at format="DD MMMM YYYY"}}">{{date published_at format="DD MMMM YYYY"}}</time><span title="at">at</span><time datetime="{{date published_at format="h:mm A"}}" title="{{date published_at format="h:mm A"}}">{{date published_at format="h:mm A"}}</time></li>
            <li class="flexy"><span title="Updated">Updated&colon;</span><time datetime="{{date updated_at format="YYYY-MM-DD"}}" title="{{date updated_at format="DD MMMM YYYY"}}">{{date updated_at format="DD MMMM YYYY"}}</time><span title="at">at</span><time datetime="{{date updated_at format="h:mm A"}}" title="{{date updated_at format="h:mm A"}}">{{date updated_at format="h:mm A"}}</time></li>
        </ul>
        <ul class="meta flexy start-content width-full">
            <li class="flexy"><span title="By">By&colon;</span>{{#primary_author}}<a href="{{url absolute='true'}}" title="{{name}}">{{name}}{{/primary_author}}</a></li>
            <li class="flexy"><span title="Reading time">Reading time&colon;</span><span title="{{reading_time minute=(t "Only a minute") minutes=(t "Takes % minutes")}}">{{reading_time minute=(t "Only a minute") minutes=(t "Takes % minutes")}}</span></li>
            <li class="flexy">{{tags visibility="public" separator='<span class="noselect" title="and">&oplus;</span>' prefix='<span title="Tagged in">Tagged in&colon;</span>' suffix='<span class="noselect" title="That&apos;s it&excl;">&#9989;</span>'}}</li>
        </ul>
        {{#if custom_excerpt}}<p title="Custom excerpt">{{custom_excerpt}}</p>{{/if}}
    </hgroup>{{/match}}
</section>
<main id="content" class="{{post_class}} flexy content-width" role="main">
    <div class="flexy start start-content gapy-1 content-width">
        {{content}}
    </div>
    {{> "loop-author"}}
</main>
{{> "cta-newsletters" heading="Receive our latest content straight to your inbox"}}
{{> "participate"}}
{{/post}}
{{/is}}